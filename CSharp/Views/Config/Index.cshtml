@{
    ViewBag.Title = "Configuration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Configuration</h1>

    <p>
        The sample account details are stored in configuration (web.config).  If you wish you may override this value here.
    </p>


    <div class="row">
        <div class="col-md-6">
            <form method="post" id="config-update-form">
                <div class="form-group">
                    <label for="CountryDdl">API Key</label>
                    <input type="text" name="apiKey" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="CountryDdl">API Secret</label>
                    <input type="text" name="apiSecret" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </form>
            @if (!string.IsNullOrEmpty(ViewBag.ReturnVal))
            {
                <p>@ViewBag.ReturnVal</p>
            }

        </div>

        <hr style="clear: both" />
        <div class="col-md-12">
            <form method="post" id="config-clear-form" action="/config/clearconfig">
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Clear Config</button>
                </div>
            </form>
        </div>
    </div>
</div>
