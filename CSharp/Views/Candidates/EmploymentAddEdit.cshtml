@model CSharp.Models.EmploymentModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Candidate Employment Add";
}


<div class="page-header">
    <h1>Candidate Employment Add / Edit</h1>
</div>

<p>
    The following is an example of how to add Candidate Employment records
</p>




@using (Html.BeginForm("EmploymentAddEdit", "candidates", FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    <fieldset>
        <legend>Add / Edit Record</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.Id, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Employment.Id, new { @class = "form-control" })
                <span class="help-block">Leave this blank to add a new Employment record</span>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.CandidateId, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Employment.CandidateId, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.Title, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">

                @Html.TextBoxFor(m => m.Employment.Title, new { @class = "form-control" })

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.CompanyName, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Employment.CompanyName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.StartDateYear, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Employment.StartDateYear, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.StartDateMonth, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Employment.StartDateMonth, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Employment.EndDateYear, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Employment.EndDateYear, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.EndDateMonth, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Employment.EndDateMonth, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Employment.IsCurrent, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">

                @Html.CheckBoxFor(m => m.Employment.IsCurrent)

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Employment.Description, new { @class = "col-md-3 control-label" })
            <div class="col-md-6">

                @Html.TextAreaFor(m => m.Employment.Description, new { @class = "form-control" })

            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-3  col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </fieldset>
    
}
@if (!string.IsNullOrEmpty(Model.RawOutput))
{
    <div class="col-md-12">
        <h4>Raw Response</h4>
        <pre class="prettyprint">@Model.RawOutput</pre>
    </div>
}